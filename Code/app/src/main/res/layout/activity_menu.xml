<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:drawableLeft="@drawable/ic_account_balance_white_24dp"
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:background="@drawable/green"
            android:textColor="#fff"
            android:layout_margin="10dp"/>
        <Button
            android:drawableLeft="@drawable/ic_conversation"
            android:id="@+id/startCalculating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Calculating"
            android:background="@drawable/green"
            android:textColor="#fff"
            android:layout_margin="10dp"/>
        <Button
            android:drawableLeft="@drawable/ic_bubble_chart_white_24dp"
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:background="@drawable/green"
            android:textColor="#fff"
            android:layout_margin="10dp"/>
        <Button
            android:drawableLeft="@drawable/ic_help_white_24dp"
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help"
            android:background="@drawable/green"
            android:textColor="#fff"
            android:layout_margin="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>